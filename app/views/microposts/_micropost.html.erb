<li id="micropost-<%= micropost.id %>">
  <span class="content">
    <strong id="title-font"><%= micropost.title %></strong><br>
    <%= safe_join(micropost.content.split("\n"),tag(:br)) %>
    <% if micropost.images.attached? %>
      <% micropost.images.each do |image| %>
        <%= image_tag image.variant(:display) %>
      <% end %>
    <% end %>
  </span>
  <span class="timestamp">
    投稿 <%= time_ago_in_words(micropost.created_at) %> 前
    <% if current_user == micropost.user %>
      <%= link_to "削除", micropost, data: { "turbo-method": :delete,
                                               turbo_confirm: "削除しますか?" } %>
    <% end %>
  </span>
</li>

